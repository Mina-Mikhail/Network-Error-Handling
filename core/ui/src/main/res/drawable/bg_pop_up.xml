<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/dimen7" />
      <gradient
        android:angle="90"
        android:endColor="#fbfbfb"
        android:startColor="#ccc" />
    </shape>
  </item>

  <item
    android:bottom="1dp"
    android:left="1dp"
    android:right="1dp"
    android:top="0dp">
    <shape android:shape="rectangle">
      <solid android:color="@color/backgroundGray" />
      <corners android:radius="@dimen/dimen7" />
    </shape>
  </item>
</layer-list>